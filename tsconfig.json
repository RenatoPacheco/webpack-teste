{
    "compilerOptions": {
        "target": "es5",
        "outDir": "src/ts",
        "module": "commonjs",
        "noEmitOnError": true,
        "sourceMap": true,
        "declaration": false,
        "emitBOM": true,
        "baseUrl": ".",
        "paths": {
            "@scripts/*": ["./src/ts/*"]
         }
    },
    "include": [
        "src/ts/**/*.ts",
        "!src/**/*.d.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}